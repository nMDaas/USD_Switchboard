#usda 1.0
(
    defaultPrim = "root"
)

def Xform "root" (
    prepend variantSets = "transformVariant"
)
{
    def Sphere "sphere"
    {
        bool refinementEnableOverride = 1
        int refinementLevel = 2
        rel material:binding = </World/Looks/OmniPBR>
    }

    variantSet "transformVariant" = {
        "small" {
            def Sphere "sphere"
            {
                double radius = 1
                bool refinementEnableOverride = 1
                int refinementLevel = 2
                rel material:binding = </World/Looks/OmniPBR>
            }
        }
        "big" {
            def Sphere "sphere"
            {
                double radius = 1.5
                bool refinementEnableOverride = 1
                int refinementLevel = 2
                rel material:binding = </World/Looks/OmniPBR>
            }
        }
    }
}
